    <div class="container py-3">
      <div class="jumbotron">
        <div class="card text-white bg-primary">
          <div class="card-header">
            <h2>Dhaka Aricha highway road crash Statistics</h2>
          </div>
          <div class="card-body">
            <h4 class="card-title">Number of accident with month name</h4>
            <table class="table table-hover table-bordered">
              <thead>
                <tr>
                  <th>Number of Accident</th>
                  <th>Month</th>
                  <th>Action</th>
                </tr>
              </thead>
              <% for(let r of result) { %>
              <tbody>
                <tr>
                  <td><%=r.monthAccident %></td>
                  <td><%= r.month %></td>
                  <td>
                    <form action="/admin/edit/<%= r._id %>" method="post">
                      <input type="submit" class="btn  btn-success" value="Update">
                    </form>
                    <!--<a class="btn btn-success" href="/admin/edit/<%= r._id %>">Update</a>-->
                  </td>
                </tr>
              </tbody>
              <% } %>
            </table>
          </div>
        </div>
      </div>
    </div> 



