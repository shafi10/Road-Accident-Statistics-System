<%- include('../includes/head.ejs') %>
  <body>
      
    <%- include('../includes/chartnavigation.ejs') %>


  <div class="container">
      <div class="row">
          <div class="col-md-8 offset-md-2 my-5">
              <div class="card card-body ">
                  <div class="card-header text-success">
                      <h5><%= poll.title %></h5>
                    </div>
                 <p class="py-3">Description: <%= poll.description %> </p>
              <div class="py-3">
                  <h5 class="text-danger">Result:</h5>
                  <ul class="list-group py-2">
                    <% for(let r of result) { %>
                      <h5><%= r.name %>:</h5>
                                  
                                    <div class="progress">
                                    
                                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" style="width:<%= r. percentage.toFixed(2) %>%"><%= r. percentage.toFixed(2) %>%</div>
                                    </div>
                      <% } %>
                  </ul>
              </div>
              <div class="my-4">
                  <h5>
                      What is your opinion
                  </h5>
                  <form action="/polls/<%= poll._id%>" method="POST">
                   <% for(let option of poll.options) { %>
                     <div class="custom-control custom-radio">
                         <input type="radio" name="option" id="<%= option._id %>" class="custom-control-input" value="<%= option._id %>">
                         <label class="custom-control-label" for="<%= option._id %>"><%= option.name %></label>
                     </div> <br>
                    <% } %>
                    <input type="submit" class="btn btn-secondary" value="Submit your oponion">
                </form>
              </div>
          </div>
        </div>
      </div>
  </div>



    <%- include('../includes/end.ejs') %>